<Window x:Class="WPF_Kontroller.Uppgift_5"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Kontroller"
        mc:Ignorable="d"
        Title="Uppgift_5" Height="325" Width="380">
    <Grid Margin=" 10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Canvas Grid.Row="0" Background="LightGray" Width="300">
            <Label x:Name="positionLabel"
               Content="X= 0, Y= 0"
               Canvas.Left="0"
               Canvas.Top="0"
        />
        </Canvas>

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal" Margin="0,5">

                <TextBlock Text="xy-position:" Width="70" VerticalAlignment="Center"/>

                <Slider x:Name="xySlider" Minimum="0" Maximum="200" Width="125" 
                    ValueChanged="Slider_ValueChanged"
                        VerticalAlignment="Center"/>

                <StackPanel Orientation="Horizontal" Margin="15 0 0 0">
                    <Label Content="Lock X:"/>
                    <CheckBox VerticalAlignment="Center"
                                  x:Name="lockX"
                                  
                        />

                    <Label Content="Lock Y:" />
                    <CheckBox VerticalAlignment="Center"
                                  x:Name="lockY"
                        />

                </StackPanel>

            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
